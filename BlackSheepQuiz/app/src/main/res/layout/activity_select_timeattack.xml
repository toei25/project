<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hp.blacksheepquiz.SelectTimeattackActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_menu_01"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/selectDifficultyTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/text_select"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="150dp"/>

        <ImageButton
            android:id="@+id/easyLevelTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_easymode"
            android:background="@android:color/transparent"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"/>

        <ImageButton
            android:id="@+id/hardLevelTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_hardmode"
            android:background="@android:color/transparent"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"/>
    </LinearLayout>



</RelativeLayout>
